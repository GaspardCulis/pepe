---
import { Image } from "astro:assets";
export interface Props {
	img: ImageMetadata;
	imgAlt: string;
	title: string;
	href?: string;
}

const { img, imgAlt, title, href } = Astro.props;
---

<a href={href} class="category flex-1 flex flex-col m-4 pb-8">
	<div class="flex items-center truncate aspect-[2/3] min-w-[200px]">
		<Image src={img} alt={imgAlt} class="w-full h-full object-cover" />
	</div>
	<div class="flex flex-col">
		<h2
			class="text-md pt-3 xl:pt-5 xl:text-xl hover:underline hover:underline-offset-4 font-bold"
		>
			{title}
		</h2>
	</div>
</a>
