---
import { Image } from "astro:assets";
export interface Props {
	img: ImageMetadata;
	imgAlt: string;
	title: string;
	href?: string;
	hoverAnimation?: boolean;
}

const { img, imgAlt, title, href, hoverAnimation } = Astro.props;
---

<a
	href={href}
	class={"category flex-1 flex flex-col m-4 pb-8" +
		(hoverAnimation ? " animate" : " ")}
>
	<div class="flex items-center truncate aspect-[2/3] min-w-[200px]">
		<Image src={img} alt={imgAlt} class="w-full h-full object-cover" />
	</div>
	<div class="flex flex-col">
		<h2
			class="text-md pt-3 xl:pt-5 xl:text-xl hover:underline hover:underline-offset-4 font-bold"
		>
			{title}
		</h2>
	</div>
</a>
<style>
	.category.animate {
		transition: transform ease-in-out 0.3s;
	}

	.category.category.animate:hover {
		transform: translateY(-10px);
	}
</style>
