---
export interface Props {
    selected: number;
}

const { selected } = Astro.props;

const sections = ["Accueil", "Biographie", "Galerie", "TÃ©moignages"];
const selected_section = sections[selected];
---

<header>
    <nav
        class="bg-orange-600 border-gray-200 px-4 sm:px-6 py-2.5 lg:py-4 dark:bg-gray-800"
    >
        <div
            class="flex flex-wrap justify-between items-center mx-auto max-w-screen-xl"
        >
            <div class="flex items-center sm:order-2">
                <button
                    data-collapse-toggle="mobile-menu-2"
                    type="button"
                    class="inline-flex items-center p-2 ml-1 text-sm text-white rounded-lg sm:hidden hover:bg-orange-700 focus:outline-none focus:ring-2 focus:ring-orange-800"
                    aria-controls="mobile-menu-2"
                    aria-expanded="false"
                >
                    <span class="sr-only">Open main menu</span>
                    <svg
                        class="w-6 h-6"
                        fill="currentColor"
                        viewBox="0 0 20 20"
                        xmlns="http://www.w3.org/2000/svg"
                        ><path
                            fill-rule="evenodd"
                            d="M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 15a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z"
                            clip-rule="evenodd"></path></svg
                    >
                    <svg
                        class="hidden w-6 h-6"
                        fill="currentColor"
                        viewBox="0 0 20 20"
                        xmlns="http://www.w3.org/2000/svg"
                        ><path
                            fill-rule="evenodd"
                            d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"
                            clip-rule="evenodd"></path></svg
                    >
                </button>
            </div>
            <div
                class="hidden justify-between items-center w-full sm:flex sm:w-auto sm:order-1 m-auto"
                id="mobile-menu-2"
            >
                <ul
                    class="flex flex-col mt-4 font-medium sm:flex-row sm:space-x-8 md:space-x-16 lg:space-x-24 sm:mt-0"
                >
                    {
                        sections.map((section) => (
                            <>
                                {section == selected_section ? (
                                    <li>
                                        <a
                                            href="#"
                                            class="block py-2 pr-4 pl-3 text-white text-lg lg:text-xl rounded bg-orange-700 sm:bg-transparent sm:text-orange-950 sm:p-0 font-bold"
                                            aria-current="page"
                                        >
                                            {section}
                                        </a>
                                    </li>
                                ) : (
                                    <li>
                                        <a
                                            href="#"
                                            class="block py-2 pr-4 pl-3 text-white text-lg lg:text-xl hover:bg-orange-700 rounded sm:hover:bg-transparent sm:hover:text-orange-950 sm:p-0"
                                        >
                                            {section}
                                        </a>
                                    </li>
                                )}
                            </>
                        ))
                    }
                </ul>
            </div>
        </div>
    </nav>
</header>

<script>
    document
        .getElementsByTagName("button")[0]
        .addEventListener("click", (event) => {
            document
                .getElementById("mobile-menu-2")
                ?.classList.toggle("hidden");
        });
</script>
