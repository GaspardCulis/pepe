---
import { client } from "../../tina/__generated__/databaseClient";

import NavbarItem from "./NavbarItem.astro";

export interface Props {
	selected_page: number;
}

const { selected_page } = Astro.props;

const storyConnection = await client.queries.storyConnection();
const categoriesConnection = await client.queries.categoriesConnection();

const pages: NavbarMenu[] = [
	{ name: "Accueil", href: "/" },
	{
		name: "Un Potier",
		href: "/parcours",
		submenus: storyConnection.data.storyConnection.edges?.map((p) => {
			return {
				name: p?.node?.title as string,
				href:
					"/parcours" +
					("/" + p?.node?._sys.filename).replace("/index", ""), // Hacky
			};
		}),
	},
	{
		name: "Galerie",
		href: "/galerie",
		submenus: categoriesConnection.data.categoriesConnection.edges?.map(
			(cat) => {
				return {
					name: cat?.node?.name as string,
					href: `/galerie/${cat?.node?._sys.filename}`,
				};
			},
		),
	},
	{
		name: "Témoignages",
		href: "/temoignages",
		submenus: [
			{
				name: "Lire",
				href: "/temoignages",
			},
			{
				name: "Écrire",
				href: "/temoignages/ecrire",
			},
		],
	},
];
---

<nav class="bg-black px-4 sm:px-6 py-2.5 lg:py-4 w-[100vw]">
	<div
		class="flex flex-wrap justify-between items-center mx-auto max-w-screen-xl"
	>
		<div class="flex items-center sm:order-2">
			<button
				data-collapse-toggle="mobile-menu-2"
				type="button"
				class="inline-flex items-center p-2 ml-1 text-sm text-white rounded-lg sm:hidden bg-gray-900 outline-none ring-2 ring-gray-800"
				aria-controls="mobile-menu-2"
				aria-expanded="false"
			>
				<span class="sr-only">Open main menu</span>
				<svg
					class="w-6 h-6 mobile-menu-toggle"
					fill="currentColor"
					viewBox="0 0 20 20"
					xmlns="http://www.w3.org/2000/svg"
					><path
						fill-rule="evenodd"
						d="M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 15a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z"
						clip-rule="evenodd"></path></svg
				>
				<svg
					class="hidden w-6 h-6 mobile-menu-toggle"
					fill="currentColor"
					viewBox="0 0 20 20"
					xmlns="http://www.w3.org/2000/svg"
					><path
						fill-rule="evenodd"
						d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"
						clip-rule="evenodd"></path></svg
				>
			</button>
		</div>
		<div
			class="hidden justify-between items-center w-full sm:flex sm:w-auto sm:order-1 m-auto mobile-menu-toggle"
			id="mobile-menu-2"
		>
			<ul
				class="flex flex-col mt-4 font-medium sm:flex-row sm:space-x-8 md:space-x-16 lg:space-x-24 sm:mt-0"
			>
				{
					pages.map((page, index) => (
						<NavbarItem
							selected={index == selected_page}
							data={page}
						/>
					))
				}
			</ul>
		</div>
	</div>
</nav>

<script>
	document
		.getElementsByTagName("button")[0]
		.addEventListener("click", (_event) => {
			document.querySelectorAll(".mobile-menu-toggle").forEach((e) => {
				e.classList.toggle("hidden");
			});
		});
</script>
