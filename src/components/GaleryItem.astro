---
export interface Props {
	data: any;
}

const { data } = Astro.props;
---

<a
	href={`/galerie/item/${data._sys.filename}`}
	class="galery-item flex-1 flex flex-col m-4 pb-8 aspect-[1/1]"
>
	<div class="flex">
		<img
			src={data.image}
			class="w-full h-full"
			transition:name={`galery-item-${data.id}`}
		/>
	</div>
	<div class="flex flex-col">
		<h2
			class="text-md pt-3 xl:pt-5 xl:text-xl hover:underline hover:underline-offset-4 font-bold"
		>
			{data.title}
		</h2>
	</div>
</a>
