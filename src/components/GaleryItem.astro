---
import { Image } from "astro:assets";

import { default as TGaleryItem } from "../model/galery-item";

export interface Props {
	data: TGaleryItem;
}

const { data } = Astro.props;
---

<div class="galery-item flex-1 flex flex-col m-4 pb-8">
	<div class="flex items-center truncate aspect-[2/3] min-w-[200px]">
		<Image
			src={data.image.src}
			width={data.image.width}
			height={data.image.height}
			alt={data.title}
			class="w-full h-full object-cover"
		/>
	</div>
	<div class="flex flex-col">
		<h2
			class="text-md pt-3 xl:pt-5 xl:text-xl hover:underline hover:underline-offset-4 font-bold"
		>
			{data.title}
		</h2>
	</div>
</div>
