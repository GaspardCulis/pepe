---
import { client } from "../../tina/__generated__/client";

export interface Props {
	relativePath: string;
}

const { relativePath } = Astro.props;

const { data } = await client.queries.galeryItems({ relativePath });
---

<a
	href={`/galerie/item/${data.galeryItems._sys.filename}`}
	class="galery-item flex-1 flex flex-col m-4 pb-8 aspect-[1/1]"
>
	<div class="flex">
		<img
			src={data.galeryItems.image}
			alt={data.galeryItems.name}
			class="w-full h-full"
			transition:name={`galery-item-${data.galeryItems.id}`}
		/>
	</div>
	<div class="flex flex-col">
		<h2
			class="text-md pt-3 xl:pt-5 xl:text-xl hover:underline hover:underline-offset-4 font-bold"
		>
			{data.galeryItems.name}
		</h2>
	</div>
</a>
