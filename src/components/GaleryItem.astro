---
import { client } from "../../tina/__generated__/databaseClient";

import { CMSGaleryItem } from "../components/cms/CMSGaleryItem";

export interface Props {
	data: any;
	index: number;
}

const { data, index } = Astro.props;
---

<a
	href={`/galerie/item/${data.data.categories.items[index].image}`}
	class="galery-item flex-1 flex flex-col m-4 pb-8 aspect-[1/1]"
>
	<CMSGaleryItem client:tina {...data} index={index} />
</a>
