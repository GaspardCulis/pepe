---
import { marked } from "marked";
import Chronology from "../model/chronology";

import Layout from "../layouts/Layout.astro";

const content = marked.parse((await Chronology.get()).content);
---

<Layout title="Daniel Culis | Chronologie" navbar_selected={1}>
	<main
		class="m-auto pt-12 w-3/4 lg:w-3/5 2xl:w-2/5 prose lg:prose-xl text-justify"
	>
		<article set:html={content} />
	</main>
</Layout>
