---
import { Image } from "astro:assets";

import Layout from "../../layouts/Layout.astro";
import { pages } from "../../components/Navbar.astro";

import pot from "../../assets/img/pot.jpg";
import contemporain from "../../assets/img/galery/sd/culis-poterie-3810.jpg";
import cristallisation from "../../assets/img/galery/sd/culis-poterie-3788.jpg";

const categories = pages.find((v) => v.href == "/galerie")?.submenus;

const posters = [pot, contemporain, cristallisation];
---

<Layout title="Daniel Culis | Galerie" navbar_selected={2}>
	<main class="m-auto w-full w-3/4 lg:w-3/4 2xl:w-2/4">
		<h1
			class="pt-16 pb-6 xl:pb-12 text-xl sm:text-2xl md:text-3xl lg:text-4xl xl:text-5xl 2xl:text-6xl font-bold"
		>
			Cat√©gories
		</h1>
		<div class="flex flex-wrap space-x-5 xl:space-x-8">
			{
				categories?.map((value, index) => (
					<a
						href={value.href}
						class="flex flex-1 items-center truncate aspect-[2/3]"
					>
						<Image
							src={posters[index]}
							alt={value.name}
							class="w-full h-full object-cover"
						/>
					</a>
				))
			}
			<a href="/galerie/jarre-a-la-corde"> </a>
		</div>
	</main>
</Layout>
<style>
	h1 {
		font-family: "Marlin Geo SQ";
	}
</style>
