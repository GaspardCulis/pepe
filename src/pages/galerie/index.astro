---
import { Image } from "astro:assets";

import Layout from "../../layouts/Layout.astro";
import { pages } from "../../components/Navbar.astro";

import pot from "../../assets/img/pot.jpg";
import contemporain from "../../assets/galery/culis-poterie-3810.jpg";
import cristallisation from "../../assets/galery/culis-poterie-3788.jpg";
import GaleryImage from "../../components/GaleryImage.astro";

const categories = pages.find((v) => v.href == "/galerie")?.submenus;

const posters = [pot, contemporain, cristallisation];
---

<Layout title="Daniel Culis | Galerie" navbar_selected={2}>
	<main class="m-auto px-4 w-full w-3/4 lg:w-3/4 2xl:w-2/4">
		<h1
			class="pt-16 pb-6 ml-4 xl:pb-12 text-2xl md:text-3xl lg:text-4xl xl:text-5xl 2xl:text-6xl font-bold"
		>
			Cat√©gories
		</h1>
		<div class="flex flex-wrap xl:space-x-8">
			{
				categories?.map((value, index) => (
					<GaleryImage
						img={posters[index]}
						imgAlt={value.name}
						title={value.name}
						href={value.href}
						hoverAnimation
					/>
				))
			}
		</div>
	</main>
</Layout>
<style>
	h1,
	h2 {
		font-family: "Marlin Geo SQ";
	}
</style>
