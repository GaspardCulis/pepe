---
import { client } from "../../../tina/__generated__/client";

import Layout from "../../layouts/Layout.astro";
import GaleryItem from "../../components/GaleryItem.astro";

export async function getStaticPaths() {
	const categoriesConnection = await client.queries.categoriesConnection();

	return categoriesConnection.data.categoriesConnection.edges?.map((cat) => {
		return {
			params: { category: cat?.node?._sys.filename },
			props: {
				relativePath: cat?.node?._sys.relativePath as string,
			},
		};
	});
}

const { relativePath } = Astro.props;

const category_obj = await client.queries.categories({ relativePath });
const galery_itemsConnection = await client.queries.galery_itemsConnection();

const items: any[] = galery_itemsConnection.data.galery_itemsConnection
	.edges!.filter(
		(i) => i?.node?.category.name === category_obj.data.categories.name,
	)
	.map((i) => i?.node);
---

<Layout title="Daniel Culis | Galerie" navbar_selected={2} transitions>
	<div
		class="flex flex-col lg:flex-row-reverse w-3/4 lg:w-3/5 2xl:w-2/5 m-auto lg:mt-24"
	>
		<div class="left">
			<h1
				class="pt-16 pb-6 ml-4 xl:pb-12 text-xl md:text-2xl lg:text-3xl xl:text-3xl 2xl:text-4xl font-bold"
			>
				{category_obj.data.categories.name}
			</h1>
			{
				items
					.filter((_, i) => i % 2 === 0)
					.map((item) => <GaleryItem data={item} />)
			}
		</div>
		<div class="right lg:mr-12 xl:mr-16 2xl:mr-24">
			{
				items
					.filter((_, i) => i % 2 === 1)
					.map((item) => <GaleryItem data={item} />)
			}
		</div>
	</div>
</Layout>
