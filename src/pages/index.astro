---
import Hero from "../components/index/Hero.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Daniel Culis | Accueil" navbar_selected={0}>
	<Hero />
	<main
		class="flex flex-col space-y-10 px-6 sm:px-12 md:px-16 lg:px-24 xl:px-32 py-16"
	>
		<section>
			<div class="grid grid-cols-1 sm:grid-cols-2 gap-4 py-8">
				<article class="flex flex-col">
					<h2 class="text-2xl pb-8 sm:pb-0 sm:text-xl">Biographie</h2>
					<div class="flex flex-col justify-center flex-grow">
						<h2 class="text-xl sm:text-4xl pb-6 pr-4">
							Je suis guez et je pue
						</h2>
						<p class="pb-4 sm:pb-0">
							Et con en plus de ça vraiment c'est pas possible.
							Enfin bref, je suis un gros con qui aime pas les
							gens
						</p>
					</div>
				</article>
				<img class="" src="/public/img/tour.png" />
			</div>
		</section>
		<section>
			<h2 class="text-2xl sm:text-4xl">Galerie</h2>
		</section>
		<section>
			<h2 class="text-2xl sm:text-4xl">Témoignages</h2>
		</section>
	</main>
</Layout>

<style>
	h2 {
		font-family: "Marlin Geo SQ";
	}
</style>
