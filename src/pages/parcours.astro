---
import Layout from "../layouts/Layout.astro";
import { Content } from "../content/biography.md";
---

<Layout title="Daniel Culis | Parcours" navbar_selected={1}>
	<main class="m-auto pt-12 w-3/4 lg:w-3/5 2xl:w-2/5">
		<Content />
	</main>
</Layout>

<style is:inline>
	h1,
	h2,
	h3,
	h4,
	p {
		font-family: "Marlin Geo SQ", "Segoe UI", "Noto Sans", Helvetica, Arial,
			sans-serif, "Apple Color Emoji", "Segoe UI Emoji";
	}

	h1 {
		font-size: 32px;
		font-weight: 600;
		line-height: 40px;
	}

	h1::after {
		content: "";
		display: block;
		width: 100%;
		height: 1px;
		background-color: #c5c5c5;
		margin-top: 8px;
		box-shadow: 0 1px 1px rgba(0, 0, 0, 0.1);
	}

	p {
		font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", "Noto Sans",
			Helvetica, Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji";

		font-size: 16px;
		font-weight: 400;
		line-height: 24px;

		display: block;
		margin-block-start: 1em;
		margin-block-end: 1em;
	}
</style>
